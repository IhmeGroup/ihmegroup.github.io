<li>
  <div class="row">
    <div class="col-sm-10">
      <div class="title">
        {{ item.title }}
      </div>
      <div class="links">
        <a class="abstract btn btn-sm z-depth-0" role="button">Description</a>
        {% if item.explorecourses %}
          <a href="{{ item.explorecourses }}" class="btn btn-sm z-depth-0" role="button" rel="external nofollow noopener" target="_blank">ExploreCourses</a>
        {% endif %}
        {% if item.coursereader %}
          <a href="{{ item.coursereader | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button" rel="external nofollow noopener" target="_blank">Course reader</a>
        {% endif %}
      </div>
      <div class="abstract hidden">
        {{ item.content }}
      </div>
    </div>
  </div>
</li>
